<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardElevation="2dp"

    app:cardUseCompatPadding="true">
    <!--app:contentPadding="4dp"-->
    <!--app:cardCornerRadius="8dp"-->

    <com.daimajia.swipe.SwipeLayout
        android:id="@+id/swipeLayout_item"
        android:layout_width="match_parent"
        android:layout_height="68dp"
        app:clickToClose="true"
        app:leftEdgeSwipeOffset="0dp"
        app:rightEdgeSwipeOffset="0dp">

        <!-- Bottom View(스와이프 하면 나오는 뷰) Start -->
        <RelativeLayout
            android:gravity="center_vertical"
            android:id="@+id/ll_content_swipe_menu"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:layout_alignParentRight="true"
                android:id="@+id/iv_emoji_share"
                android:layout_width="68dp"
                android:layout_height="68dp"
                android:src="@drawable/rectangle_74"/>

            <ImageView
                android:layout_toLeftOf="@id/iv_emoji_share"
                android:src="@drawable/rectangle_74_2"
                android:id="@+id/iv_emoji_edit"
                android:layout_width="68dp"
                android:layout_height="68dp"/>

            <ImageView
                android:layout_toLeftOf="@id/iv_emoji_edit"
                android:id="@+id/iv_emoji_delete"
                android:layout_width="68dp"
                android:src="@drawable/rectangle_74_3"
                android:layout_height="68dp"/>

        </RelativeLayout>
        <!-- Bottom View End-->

        <!-- Surface View(평상시에 보이는 뷰) Start -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <LinearLayout
                android:background="@color/dark_blue"
                android:gravity="center"
                android:layout_width="64dp"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:textColor="@android:color/white"
                    android:id="@+id/tv_emoji_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="Year Month"/>

                <TextView
                    android:textColor="@android:color/white"
                    android:id="@+id/tv_emoji_day_of_week"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="Emoji Date"/>
            </LinearLayout>

            <hani.momanii.supernova_emoji_library.Helper.EmojiconTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Hello Emojis !"
                android:id="@+id/tv_emoji_diary"
                android:padding="4dp"
                android:textColor="#000000"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:layout_gravity="center"/>

        </LinearLayout>
        <!-- Surface View End -->
    </com.daimajia.swipe.SwipeLayout>
</android.support.v7.widget.CardView>