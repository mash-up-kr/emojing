<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:padding="4dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    <TextView
        android:id="@+id/emoji_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:padding="4dp"
        tools:text="Year Month"/>
    <TextView
        android:id="@+id/emoji_day_of_week"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/emoji_date"
        android:padding="4dp"
        tools:text="Emoji Date" />
    </LinearLayout>
    <View
        android:layout_width="1dip"
        android:layout_height="fill_parent"
        android:background="#FF0000FF"
        />
    <TextView
        android:id="@+id/emoji_diary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/emoji_date"
        android:padding="4dp"
        tools:text="Emoji Emoji Emoji"/>


</LinearLayout>